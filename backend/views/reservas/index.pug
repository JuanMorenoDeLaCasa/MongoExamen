extends ../layout

block content
    .container 
        h1 Lista de reservas
        br
        table.table.table-hover.table-striped.table-bordered
            thead
                tr
                th Nombre
                th Duracion
                th Fecha
                th Hora
            tbody
                each reserva in reservas
                    tr
                        td= reserva.nombre
                        td= reserva.duracion
                        td= reserva.fecha
                        td= reserva.hora
                        td
                            a(href=`/reservas/edit/${reserva._id}`) Editar
                            span | 
                            a(href=`/reservas/delete/${reserva._id}`) Eliminar
        br
        a(href="/reservas/create") Crear nuevo reserva 