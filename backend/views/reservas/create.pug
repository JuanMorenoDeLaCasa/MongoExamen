extends ../layout

block content
    .container 
        form(action="/reservas/create", method="post") 
            label.form-label(for="nombre") Nombre:
            input.form-control(type="text", name="nombre", required)
            br
            label.form-label(for="duracion") Duracion
            input.form-control(type="text", name="duracion", required)
            br
            label.form-label(for="fecha") Fecha:
            input.form-control(type="text", name="fecha", required)
            br
            label.form-label(for="hora") Hora:
            input.form-control(type="text", name="hora", required)
            br
            button.btn.btn-success(type="submit") Guardar
            a.btn.btn-danger(href="/reservas") Cancelar
